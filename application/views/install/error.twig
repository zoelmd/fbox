{% extends "install/base.twig" %}

{% set page = 'Install' %}

{% block title %}
  Requirements
{% endblock %}

{% block css %}
  {{ parent() }}
  <style>
    .badge-danger {
        background-color: #c9302c !important;
    }

    .badge-success {
        background-color: #449d44 !important;
    }
  </style>
{% endblock %}

{% block mainContent %}
  {{ form_open()}}
  <div class="panel pv panel-default">
      <div class="panel-heading">
        <h4>Requirements - Kingposter Installation</h4>
      </div>
      <div class="panel-body">
          <ul class="list-group">
            {% for item in requirements %}
                <li class="list-group-item">{{ item['title'] }}
                  {% if item['status'] ==  'ok' %}
                    <span class="badge badge-success">Ok</span>
                  {% else %}
                    <span class="badge badge-danger">Fail</span>
                  {% endif %}
                </li>
            {% endfor %}
          </ul>
          <p>Check the Documentation for more details about the kingposter requirements <br /><a href="http://pandisoft.com/kingposter/doc/" target="_blank">Documenation</a></p>
      </div>
    </div>
  </form>
{% endblock %}